    <display-name>E-Learning-WebApp</display-name>
    <!--    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>ElasticSearchImport</servlet-name>
        <url-pattern>/ElasticSearchImport</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/views/index.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>org.edu.uams.server.util.AppServletContextListener</listener-class>
    </listener>
